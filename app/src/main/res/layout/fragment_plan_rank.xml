<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no1_3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.starun.www.starun.view.utilview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:id="@+id/bangyan"
                android:src="@drawable/user_avatar_11"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/bangyan"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_below="@id/bangyan"
                android:id="@+id/bangyan_name"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <com.starun.www.starun.view.utilview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                android:id="@+id/zhuangyuan"
                android:src="@drawable/user_avatar_12"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:src="@drawable/zhuangyuan"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_below="@id/zhuangyuan"
                android:id="@+id/zhuangyuan_name"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center">
            <com.starun.www.starun.view.utilview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:id="@+id/tanhua"
                android:src="@drawable/user_avatar_14"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/tanhua"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:layout_below="@id/tanhua"
                android:id="@+id/tanhua_name"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:id="@+id/user_list_view_rank"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    </ListView>
</LinearLayout>
