<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.starun.www.starun.view.RunPlanMainFragment">

    <!--&lt;!&ndash; TODO: Update blank fragment layout &ndash;&gt;-->
    <!--<TextView android:layout_width="match_parent" android:layout_height="match_parent"-->
        <!--android:text="@string/hello_blank_fragment" />-->



    <RelativeLayout
        android:id="@+id/plan_display_rl"
        android:layout_width="290dp"
        android:layout_centerHorizontal="true"
        android:layout_height="290dp">

        <RelativeLayout

            android:id="@+id/plan_run_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/plan_run_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="2.55"
                android:textSize="50dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/plan_run_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="公里数"
                android:textSize="20dp"
                android:layout_below="@id/plan_run_tv"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/plan_run_unit_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/plan_time_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慢跑倒计时:"
                    android:textSize="15dp"/>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:gravity="center">
                 <TextView
                     android:id="@+id/plan_time_icon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/exercise_time_icon"/>
                 <TextView
                     android:id="@+id/plan_time_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="10:00"
                     android:textSize="25dp"/>
             </LinearLayout>
                <Chronometer
                    android:visibility="gone"
                    android:id="@+id/plan_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>



    <FrameLayout
        android:layout_below="@id/plan_display_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/plan_run_btn_ll">

        <Button
            android:id="@+id/plan_run_start_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left|center_vertical"
            android:text="继续"
            android:layout_marginLeft="80dp"
            android:background="@drawable/circle_btn_shape"/>
        <Button
            android:id="@+id/plan_run_pause_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="暂停"
            android:background="@drawable/circle_btn_shape"/>
        <Button
            android:id="@+id/plan_run_stop_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="80dp"
            android:text="停止"
            android:background="@drawable/circle_btn_shape"/>

    </FrameLayout>
</RelativeLayout>
