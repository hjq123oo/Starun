<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="com.starun.www.starun.view.ExerciseActivity">

    <include layout="@layout/toolbar_exercise"
        android:id="@+id/toolbar_exercise_layout"/>

    <RelativeLayout
        android:id="@+id/display_rl"
        android:layout_width="290dp"
        android:layout_centerHorizontal="true"
        android:layout_height="240dp"
        android:layout_below="@id/toolbar_exercise_layout">

        <RelativeLayout

            android:id="@+id/run_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/run_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="2.55"
                android:textSize="30sp"
                android:layout_marginTop="30dp"/>
                
            <TextView
                android:id="@+id/run_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="公里"
                android:textSize="20sp"
                android:layout_below="@id/run_tv"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/run_unit_tv"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="时间:"
                    android:textSize="20dp"/>
                <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>



    <FrameLayout
        android:layout_below="@id/display_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/run_btn_ll">

        <Button
            android:id="@+id/run_start_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left|center_vertical"
            android:text="继续"
            android:layout_marginLeft="80dp"
            android:background="@drawable/circle_btn_shape"/>
        <Button
            android:id="@+id/run_pause_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="暂停"
            android:background="@drawable/circle_btn_shape"/>
        <Button
            android:id="@+id/run_stop_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="80dp"
            android:text="停止"
            android:background="@drawable/circle_btn_shape"/>

    </FrameLayout>

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="地图"-->
        <!--android:id="@+id/map"-->
        <!--android:layout_below="@+id/run_btn_ll"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:visibility="invisible" />-->

    <fragment
        android:id="@+id/music_fragment"
        android:name="com.starun.www.starun.view.MusicFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/run_btn_ll"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>